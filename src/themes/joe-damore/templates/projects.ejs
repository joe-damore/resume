<section class="section projects">
  <aside class="section__aside">
    <h2 class="section__aside__label">
      <span class="section__aside__label__content section__aside__label__content--projects">
        Project Highlights
      </span>
    </h2>
  </aside>
  <div class="section__main">
    <div class="projects__container">
      <% projects.forEach(function(project) { %>
        <div class="project">
          <div class="project__header">
            <div class="project__header__name">
              <%- project.name %>
            </div>
          </div>
          <div class="project__tagline">
            <%- project.tagline %>
          </div>
          <div class="project__notes">
            <ul class="project__notes__list">
              <% project.notes.forEach((note) => { %>
                <li class="project__notes__list__item">
                  <%- note %>
                </li>
              <% }) %>
            </ul>
          </div>
          <div class="project__url">
            <a href="<%- project.url %>">
              <%- project.urlPretty %>
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>
